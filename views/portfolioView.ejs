<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>My Portfolio</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <style media="screen">
        * {
            font-family: Montserrat, "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-weight: bolder;
        }
        
        .row {
            margin: 0;
        }
        
        .navbar-default {
            height: 100px;
            padding-top: 23px;
            padding-left: 70px;
            border: 0;
            border-radius: 0 !important;
            background: #2c3e50;
        }
        
        .navbar-default .navbar-brand {
            text-transform: uppercase;
            font-size: 2em;
            text-decoration: none;
            color: white;
            transition: color 0.3s ease;
            cursor: pointer;
        }
        
        .navbar-default .navbar-brand:hover {
            color: #18bc9c;
            transition: color 0.3s ease;
        }
        
        .card {
            padding: 10px;
            padding-top: 20px;
            background: #18bc9c;
            border: 1px #c8c3ff solid;
            border-radius: 5px;
            text-align: center;
            margin: 10px 3% 1% 3%;
            height: 190px;
            width: calc(80% * (1/3));
        }
        
        .card .card-title {
            color: #02695e;
            font-size: 2em;
            font-weight: bold;
            text-transform: capitalize;
        }
        
        .card .card-link {
            margin-top: 40px;
            font-size: 1.1em;
            font-weight: bold;
            width: 90%;
            border: 2px solid white;
            color: white;
            background: transparent;
            transition: background-color 0.5s ease;
        }
        
        .card .card-link:hover {
            color: #18bc9c;
            background: white;
            transition: background-color 0.5s ease;
        }
        
        .form-container {
            height: 400px;
            border-left: 1px solid gray;
            padding-left: 30px;
        }
        
        .form-control {
            width: 90%;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/home" style="
    display: block;
    width: 300px; ">All Portfolios</a>
            </div>
            <form class="form" method="POST" action="/logout" style="
    display: block;
    width: 500px;
    float: right; ">
                <div style="float:right;">
                    <div class="form-group" style="
    width: 200px;
    display: inline-block;
    float:left;
    font-size: 16 ">
                        <label style="color: aliceblue " for="InputTitle"><%=session?session.portfolio.email:"User Name"%></label>
                        <%var messages=getMessages();if(messages.success){for(var i=0;i<messages.success.length;i++){ %>
            <center>
              <div class="alert alert-success">
                <%=messages.success[i];%>
              </div>
            </center>
            <% }}else if(messages.error){ for(var i=0;i<messages.error.length;i++){ %>
            <center>
              <div class="alert alert-error">
                <%=messages.error[i];%>
              </div>
            </center>
            
            <% }} %>
                          </div>
        </div>

        <button style="background-color: greenyellow;float:right;margin-top: 24px;margin-right: 30px;" type="submit" class="btn btn-default">Logout</button>
        <!--<p style="
                         color: brown;
                    ">To create a portfolio you need at least one project</p>-->
        </form>
        </div>
        
    </nav>
    <div class="row">
        <div class="col-xs-12 col-md-8">
            <div class="row">
                                <% for(var i=0; i< portfolios.length && i<10; i++){%>
                    <% if(portfolios[i].works.length!=0){%>
                    <div class="card col-xs-4" style="height: 300px;width: 300px; ">
                        <% if(portfolios[i].profilePicture!="test_image"){%>
                          <img style="height: 30%;border-radius: 50%;width: 120px;"src="/public/Uploads/<%=portfolios[i].profilePicture%>"></img>   
                            <% } %>
                        <h4 class="card-title" style="font-size: 1.5em;margin-bottom: 5px;" >
                            <%= portfolios[i].name %>
                        </h4>
                        <% var max= portfolios[i].works.length<2?portfolios[i].works.length:2; %>
                        <% for(var j=0; j<max; j++){%>
                            <% if(portfolios[i].works[j].category=="code" || portfolios[i].works[j].category=="link"){ %>
                                <a href="<%= portfolios[i].works[j].URL %>" style="margin-top:5px;font-size: 1em;" class="btn btn-primary card-link"><%= portfolios[i].works[j].title %></a>
                                <p style="overflow-wrap: break-word;font-size: 13px;">
                                 <%= portfolios[i].works[j].description.slice(0,60) %> ...
                                </p>
                            <% } else {%>
                            <h2 style="font-size: 16px;color: whitesmoke;margin-top: 0px;margin-bottom: 0px;" >
                                <%= portfolios[i].works[j].title %>
                            </h2 >
                            <p style="overflow-wrap: break-word;font-size: 13px;">
                                 <%= portfolios[i].works[j].description.slice(0,60) %> ...
                            </p>
                <form class="form" method="POST" action="/projectScreen">
                        <input name = "thiswork" type="hidden" value= "<%=portfolios[i].works[j]._id %>" >
                    <button style="background-color: greenyellow" type="submit" class="btn btn-default">View Screenshots</button>
                </form>
                            <% } %>
                        <% } %>
                    </div>
                    <% } %>
                    <% } %>
                    <% if(portfolios[10]){ %>
                        <form class="form" method="POST" action="/loggedin">
                        <input name = "page" type="hidden" value= "<%= parseInt(session.pageID) +1%>" >
                        <button class="btn" id="next" type="submit" >next</button>
                    </form>
                    <%} %>
                    <% if(session.pageID>1){ %>
                        <form class="form" method="POST" action="/loggedin">
                        <input name = "page" type="hidden" value= "<%= parseInt(session.pageID) -1%>" >
                        <button class="btn" id="previous" type="submit" >previous</button>
                    </form>
                    <% } %>
            </div>
        </div>
        <div class="col-xs-12 col-md-4">
            <div class="form-container">
                <h3 style="margin-bottom:40px;"><%= session.portfolio.works.length!=0? "Update Portfolio":"Create Portfolio" %></h3>
                <form class="form" enctype="multipart/form-data" method="POST" action="/createProjectPage">
                    <div class="form-group">
                        <label for="InputTitle">Name</label>
                        <input name="name" type="text" class="form-control" id="InputTitle" placeholder="Name required">
                    </div>
                    <div class="form-group">
                        <label for="InputTitle">Profile Picture</label>
                        <input name="profilePicture" type="file" class="form-control" id="InputTitle" placeholder="your picture">
                    </div>


                    <center> <button style="background-color: greenyellow" type="submit" class="btn btn-default">new project</button></center>
                     <% if(session.portfolio.works.length==0){%>
                    <p style="
                         color: brown;
                    ">To create a portfolio you need at least one project</p>
                    <% } %>
                </form>
            </div>
        </div>
    </div>

</html>